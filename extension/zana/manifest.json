{
  "manifest_version": 2,
  "name": "zana",
  "description": "'Quality of life' extension to for websites that sell books.",
  "version": "0.1.0",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": [
      "https://api.zanareads.com/*"
  ],
  "background": {
    "scripts": [
      "background_script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mozilla.org/*",
        "*://*.dukagjinibooks.com/*"
      ],
      "js": [
        "scripts/dukagjinibooks.js",
        "content_script.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "zana"
  },
  "options_ui": {
    "page": "options/index.html"
  }
}
