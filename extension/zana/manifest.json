{
  "manifest_version": 2,
  "name": "zana",
  "description": "'Quality of life' extension to for websites that sell books.",
  "version": "0.1.0",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": [
      "tabs",
      "https://api.zanareads.com/*"
  ],
  "background": {
    "scripts": [
      "background_script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mozilla.org/*",
        "*://*.dukagjinibooks.com/*"
      ],
      "js": [
        "modules/dukagjinibooks.js",
        "content_script.js"
      ]
    }
  ]
}
